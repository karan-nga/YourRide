<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="model"
            type="com.rawtooth.yourride.model.ridemodel.RidesModelItem" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/item_v1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/item_back"
        android:layout_marginEnd="20dp">

        <ImageView
            android:id="@+id/item_iv1"
            android:layout_width="match_parent"
            android:layout_height="148dp"
            android:layout_marginStart="27dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="27dp"
            app:layout_constraintEnd_toEndOf="@id/item_v1"
            app:layout_constraintStart_toStartOf="@id/item_v1"
            app:layout_constraintTop_toTopOf="@id/item_v1" />

        <TextView
            android:id="@+id/cityname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="27dp"
            android:layout_marginTop="17dp"
            android:background="#000000"
            android:text="@{model.city}"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:padding="4dp"
            app:layout_constraintStart_toStartOf="@id/item_v1"
            app:layout_constraintTop_toBottomOf="@id/item_iv1" />

        <TextView
            android:id="@+id/statename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="17dp"
            android:layout_marginEnd="27dp"
            android:background="#000000"
            android:text="@{model.state}"
            android:textSize="12sp"
            android:padding="4dp"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="@id/item_v1"
            app:layout_constraintTop_toBottomOf="@id/item_iv1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="56dp"
            android:layout_marginStart="29dp"
            android:layout_marginEnd="27dp"
            app:layout_constraintTop_toBottomOf="@id/item_iv1"
            app:layout_constraintStart_toStartOf="@id/item_v1"
            app:layout_constraintEnd_toEndOf="@id/item_v1"
            app:layout_constraintBottom_toBottomOf="@id/item_v1">

            <TextView
                android:id="@+id/id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text='@{model.id}'
                android:textColor="@color/white"
                android:layout_marginBottom="12dp"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/origin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Origin Station : 20"
                android:textColor="@color/white"
                android:layout_marginBottom="12dp"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/path"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="station_path : [20, 39, 40, 42, 54, 63, 72, 88, 98]"
                android:textColor="@color/white"
                android:layout_marginBottom="12dp"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Date : 15th Feb 2022 16:33"
                android:textColor="@color/white"
                android:layout_marginBottom="12dp"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/distance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Distance : 0"
                android:textColor="@color/white"
                android:layout_marginBottom="12dp"
                android:textSize="18sp" />


        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>